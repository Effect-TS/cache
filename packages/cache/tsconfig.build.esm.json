{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "build/esm",
    "declarationDir": "build/dts",
    "target": "ES2018",
    "module": "ES6",
    "moduleResolution": "Node",
    "incremental": true,
    "tsBuildInfoFile": "tsbuildinfo/esm.tsbuildinfo",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false
  },
  "include": ["src/**/*"],
  "exclude": ["test", "node_modules"]
}
